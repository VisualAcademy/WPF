<Window x:Class="WpfIsolatedStorage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="당신이 좋아하는 색상은?"></TextBlock>
            <ListBox x:Name="lstColors" Height="100px"></ListBox>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="색상명 : "></TextBlock>
                <TextBox x:Name="txtColor" Width="100px"></TextBox>
            </StackPanel>
            <Button x:Name="btnSave" Content="색상 입력" HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Grid>
</Window>
